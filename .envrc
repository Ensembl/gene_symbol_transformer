# NVIDIA CUDA
################################################################################
CUDA_VERSION="default"
#CUDA_VERSION="9.0"
#CUDA_VERSION="9.2"
CUDA_VERSION="10.1"

if [[ "$CUDA_VERSION" = "default" ]]; then
    [[ -s "/usr/local/cuda" ]] && export CUDA_HOME="/usr/local/cuda"
    [[ -s "${CUDA_HOME}/bin" ]] && export PATH="${PATH}:${CUDA_HOME}/bin"
    [[ -s "${CUDA_HOME}/lib64" ]] && export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${CUDA_HOME}/lib64"
else
    [[ -s "/usr/local/cuda-${CUDA_VERSION}" ]] && export CUDA_HOME="/usr/local/cuda-${CUDA_VERSION}"
    [[ -s "${CUDA_HOME}/bin" ]] && export PATH="${PATH}:${CUDA_HOME}/bin"
    [[ -s "${CUDA_HOME}/lib64" ]] && export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${CUDA_HOME}/lib64"
fi
################################################################################
