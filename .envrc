export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/lib64"
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/nfs/software/ensembl/RHEL74-dev/linuxbrew/lib"
